extends layout

block content
  .container.mt-4
    h1.text-center.mb-4.text-primary= title

    // Add New Gadget button
    .text-end.mb-3
      a.btn.btn-success(href='/gadgets/create') â• Add New Gadget

    // Display each gadget in a card
    .row
      each item in results
        .col-md-4.mb-4
          .card.shadow.p-3.h-100
            .card-body
              h4.card-title.text-dark= item.gadget_name
              p.text-muted.mb-1 Brand: #{item.brand}
              p.text-muted.mb-2 Price: $#{item.price}

              // Action Buttons
              .btn-group
                a.btn.btn-info(href=`/gadgets/detail?id=${item._id}`) ğŸ” View
                a.btn.btn-warning(href=`/gadgets/update?id=${item._id}`) âœï¸ Edit
                a.btn.btn-danger(href=`/gadgets/delete?id=${item._id}`) âŒ Delete
